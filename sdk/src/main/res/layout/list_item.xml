<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        tools:src="@drawable/payment_card" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_weight="1"
            android:id="@+id/text_with_subtext_view">
        <TextView
                android:id="@+id/text_item_title"
                style="?android:attr/itemTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_weight="3"
                tools:text="Credit Card" tools:ignore="NestedWeights"/>

        <TextView
                android:id="@+id/subtext_item_title"
                style="?android:attr/textAppearanceListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_weight="2"
                tools:text="Powered by Omise"
                android:textSize="12sp"
                android:textColor="#616161" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_indicator_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        tools:src="@drawable/ic_next" />
</LinearLayout>
