<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog">

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/ic_close_small" />

    <ImageView
        android:id="@+id/cvv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dialog_container_top_margin"
        tools:src="@drawable/cvv_3_digits" />

    <TextView
        android:id="@+id/cvv_description_text"
        style="@style/OmiseBodyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvv_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/form_padding"
        android:layout_marginBottom="@dimen/dialog_container_bottom_margin"
        android:gravity="center"
        tools:text="@string/cvv_tooltip_3_digits" />
</RelativeLayout>